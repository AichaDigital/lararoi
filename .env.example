# ============================================
# VAT Verification Configuration
# ============================================

# Cache Configuration
CACHE_TTL=86400

# API Timeout (in seconds) - Default: 15
API_TIMEOUT=15

# Providers Order (comma-separated)
# Default: aeat,vies_soap,vies_rest,isvat
# Available: aeat,vies_soap,vies_rest,isvat,vatlayer,viesapi
PROVIDERS_ORDER=aeat,vies_soap,vies_rest,isvat

# ============================================
# AEAT Configuration (Spain Only)
# ============================================
CERT_P12_PATH=./.certificates/certificate.p12
CERT_P12_PASSWORD=
AEAT_ENDPOINT=https://www1.agenciatributaria.gob.es/wlpl/BURT-JDIT/ws/VNifV2SOAP

# ============================================
# VIES Configuration
# ============================================
VIES_TEST_MODE=false

# ============================================
# Paid Providers (Optional)
# ============================================

# Vatlayer
VATLAYER_ENABLED=false
VATLAYER_KEY=

# ViesAPI
VIESAPI_ENABLED=false
VIESAPI_KEY=
VIESAPI_SECRET=
VIESAPI_IP=

# IsVAT
ISVAT_USE_LIVE=false

# ============================================
# Logging Configuration
# ============================================
LOGGING_ENABLED=true
LOGGING_LEVEL=info
